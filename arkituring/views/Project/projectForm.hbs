<div>
    <form action="/addProject" method="POST">
    <section id="terrainDetails">
    <div>
        <label for="totalSquareMeters">Metros cuadrados</label>
        <input type="number" name="totalSquareMeters" id="totalSquareMeters">
    </div>

    <div>
        <label for="street">Calle</label>
        <input type="text" name="street" id="street" placeholder="Calle">
    </div>

    <div>
        <label for="neighborhood">Colonia</label>
        <input type="text" name="neighborhood" id="neighborhood" placeholder="Colonia">
    </div>

    <div>
        <label for="extNo">No. Ext.</label>
        <input type="text" name="extNo" id="extNo" placeholder="No. ext.">
    </div>

    <div>
        <label for="intNo">No. Int.</label>
        <input type="text" name="intNo" id="intNo" placeholder="No. int">
    </div>

    <div>
        <label for="zipCode">C.P.</label>
        <input type="text" name="zipCode" id="zipCode" placeholder="C.P.">
    </div>

    <div>
        <label for="pduInfo">Información del PDU (opcional)</label>
        <input type="textarea" name="pduInfo" id="pduInfo" placeholder="Agrega información sobre el PDU de tu ciudad">
    </div>

    <div>
        <label for="residentialInfo">Información restricciones (opcional)</label>
        <input type="textarea" name="residentialInfo" id="residentialInfo" placeholder="Agrega información sobre limitaciones de construcción de tu residencial (si aplica)">
    </div>

    <!--<div>
        <label for="terrainImages">Imagenes del terreno</label>
        <input type="file" name="terrainImages" id="residentialInfo">
    </div>-->
    </section>

    <section id="conceptDetails">

    <div>
        <label for="pinterstAPI">Pinterest concept board</label>
        <input type="text" name="pinterstAPI" id="pinterstAPI" placeholder="Agrega el link de tu tablero de Pinterest">
    </div>

    <div>
        <label for="specificRequest">Detalles importantes</label>
        <input type="textarea" name="specificRequest" id="specificRequest" placeholder="Agrega detalles importantes para tu diseño, cantidad de habitaciones, baños, materiales, etc.">
    </div>

    </section>

    </form>
</div>
<h2>Edición de proyecto</h2>
<br>
{{#if valueCookieUser}}
<div class="mx-4">
    <p class="loginCli" style="display: none;">1</p>

    <form action="/project/{{idEdit}}/edit" method="POST" enctype="multipart/form-data">
        <div class="changes"></div>
    <script>   
        console.log(client)
        let editUserType;
        if (client == null) {
                editUserType=true
        } 
        console.log(editUserType)

        function editUser() {
            editUserType = editUserType === true? false:true; //////${editUserType? "no edita cliete":"no edita arq"}
            document.querySelector('.changes').innerHTML =
            `
            <div>
                <div>
                    <label for="totalSquareMeters">Metros cuadrados</label>
                    <input type="number" value='{{viewPRoject.totalSquareMeters}}' name="totalSquareMeters" id="totalSquareMeters" ${editUserType? '':'readonly'}>
                </div>

                <div>
                    <label for="address">Dirección</label>
                    <input type="text" name="address" value="{{viewPRoject.address}}" id="address" placeholder="Dirección del lugar" ${editUserType? 'readonly':''}>
                </div>
            </div>`;

        }
        editUser()

    </script>
    <p style="font-weight: bold;font-size:22px ">Información General</p> 
    <div class="ml-10 mr-10">

        <section id="terrainDetails">
        <div class="form-group col">
            <label for="projectName">Nombre del proyecto</label>
            <input type="text" class='form-control' value='{{viewPRoject.projectName}}' name="projectName" id="projectName" >
        </div>
        

        
        <div class="form-group col">
            <label for="limitatiosLaws">Información de limitaciones (opcional)</label>
            <textarea class='form-control'  rows="4" cols="50" value='{{viewPRoject.limitatiosLaws}}' name="limitatiosLaws" id="limitatiosLaws" placeholder="Agrega información sobre las limitaciones de construcción"></textarea>
        </div>

        <!--<div>
            <label for="terrainImages">Imagenes del terreno</label>
            <input type="file" name="terrainImages" value="{{viewPRoject.terrainImages}}" id="terrainImages">
        </div>-->

        
        </section>

        <p style="font-weight: bold;font-size:22px ">Detalles y concepto</p> 
        <div class="form-group col">
        <div class="form-group col">  
            <label for="pinterstAPI">Agrega el link de tu board conceptual de Pinterest</label>
            <img src="./images/pinterest.png" value='{{viewPRoject.pinterestAPI}}' alt="" width="20"><input class='form-control' type="text" name="pinterstAPI" id="pinterstAPI" placeholder="Agrega el link de tu tablero de Pinterest">
        </div>

        <div class="form-group col">
            <label for="specificRequest">Detalles importantes</label>
            <textarea rows="4" cols="50" class='form-control' value='{{viewPRoject.specificRequest}}'  name="specificRequest" id="specificRequest" placeholder="Agrega detalles importantes para tu diseño, cantidad de habitaciones, baños, materiales, etc.">
            </textarea>
        </div>
        <div class="form-group col">
            <label for="renderImg">Render Principal</label>
            <input class='form-control' type="file" name="renderImg" value="{{viewPRoject.renderImg}}" id="renderImg">
        </div>
        </div>

        <div class=" d-flex align-content-center justify-content-center ">
            <button type="submit" class="btn-lg m-1 btn-outline-success" >Guardar cambios</button>
        </div>
    </div>
    </form>

</div>
{{/if}}

<div id="signUp-content">
    <div class="allForm"></div>
   
 <script>
     let selectUserType = false;

     function changeUser (){
         selectUserType = selectUserType === true ? false : true;

    document.querySelector('.allForm').innerHTML =`
    <form action="/signup" method="POST" enctype="multipart/form-data">

    <p>Cambiar a: 
           
            <input type="button" onclick='changeUser()' id='client' name="userType"
             value="Cambiar"></p>
            
           
   //<!--formulario cliente-->
    <div>
                 <!--tag para mandar a Arch o Client-->
            <div >    
            <input class="noDisplay" type="text" style="display:none" name="userSign" value="${!selectUserType? 'architect':'client'}"id="userSign">
            </div>

    <h3>Soy: ${!selectUserType? 'Empresa':'Cliente'}</h3>
    <br>
        <fieldset>  
        <h3>Información de contacto</h3>
        <br>
        <div class="row">
        <div class="form-group col">
            <label for="firstName">Nombre(s)</label>
            <input type="text" class='form-control' style="height:50px;" name="firstName" id="firstName" placeholder="Nombre(s)">
        </div>

        <div class="form-group col">
            <label for="lastName">Apellido(s)</label>
            <input type="text" class='form-control' name="lastName" style="height:50px;"  id="lastName" placeholder="Apellido(s)">
        </div>
        </div>

        <div class="row">
        <div class="form-group col">
            <label for="email">Correo Electrónico</label>
            <input type="email" class='form-control' name="email" style="height:50px;"  id="email" placeholder="Correo electrónico principal">
        </div>

        <div class="form-group col">
            <label for="password">Contraseña</label>
            <input type="password" class='form-control' name="password" style="height:50px;"  id="password" placeholder="********">
            <small class="form-text text-muted" >La Contraseña debe contener al menos 6 caráctres, un número, una letra minúscula, una letra mayúscula 
                y escribirse sin espacios.
            </small >
        </div>
        </div>    

        <div class="row">
        <div class="form-group col">
            <label for="mobileNumber">Número de teléfono móvil</label>
            <input type="text" class='form-control' name="mobileNumber" style="height:50px;"  id="mobileNumber" placeholder="Número de 10 digitos">
        </div>

        <div class="form-group col">
            <label for="rfc">RFC</label>
            <input type="text" class='form-control' name="rfc" id="rfc" style="height:50px;"  placeholder="RFC">
        </div>
         </div>

        <div class="form-group >
            <label for="address">Dirección</label>
            <input type="text" class='form-control' name="address" id="address" style="height:50px;"  placeholder='Dirección actual'>
        </div>

        <div class="row">
        <div class="form-group col">
            <label for="zipCode">C.P.</label>
            <input type="text" class='form-control' name="zipCode" id="zipCode" style="height:50px;"  placeholder="Código Postal">
        </div>

        <div class="form-group col">
            <label for="country">País de residencia</label>
            <input type="text" class='form-control' name="country" id="country" style="height:50px;"  value="Mexico" placeholder="País de residencia">
        </div>

        <div class="form-group col">
            <label for="city">Ciudad</label>
            <input type="text" class='form-control' name="city" id="city" style="height:50px;"  placeholder="Ciudad de residencia">
        </div>
        </div>
        </fieldset>
        ` 
        
        + `${selectUserType? 
        `<button type="submit" class="btn btn-primary block-center ">Create account</button>
        </section>
        {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
        {{/if}}  </div>
        </form>`:
        `<!--formularioa extra para arquitectos-->
        <br>
         <fieldset>
        <section id="archForm">
        
        <h3>Información Empresa</h3>
        <br>
         <div class="row">
        <div class="form-group col">
            <label for="commercialName">Nombre comercial</label>
            <input type="text" class='form-control' name="commercialName" style="height:50px;"  id="commercialName" placeholder="Nombre comercial">
        </div> 

        <div class="form-group col">
            <label for="fiscalName">Nombre fiscal</label>
            <input type="text"  class='form-control' name="fiscalName" style="height:50px;"  id="fiscalName" placeholder="Nombre fiscal">
        </div>     
         </div> 
        
        <div>
            <label for="logoImg">Logotipo</label>
            <input type="file"  class='form-control' name="logoImg" style="height:50px;"  id="logoImg">
        </div>
        </fieldset>
    <br>
    <fieldset>
    
    <h3>Bio and Social Media</h3>
    <br>
        <div "form-group col">
            <label class="col-sm-2 col-form-label" for="bioStory">Cuentanos un poco de ti.</label>
            <div class="col">
            <input type="textarea" class='form-control' name="bioStory" style="height:50px;"  id="bioStory" 
            placeholder="Escribe un breve texto que podrán leer tus posibles
            clietnes para conocerte más">
            </div>   
        </div>     

        <div class="row">
        <div "form-group col">
            <img src="./images/www.png" alt="IG-logo" width="30" height="30">
            <input type="text"  class='form-control' name="webPage" id="webPage" style="height:50px;"  placeholder="Pega el link de tu página web">
        </div>


        <div "form-group col">
            
            <img src="./images/facebook.jpg" alt="facebook-logo" width="30" height="30">
            <input type="text" class='form-control' name="facebook" id="facebook" style="height:50px;"  placeholder="Pega el link de tu perfil de Facebook">
        </div>

        <div "form-group col">
            
            <img src="./images/IG.png" alt="IG-logo" width="30" height="30">
            <input type="text" name="instragram" class='form-control' id="instragram" style="height:50px;"  placeholder="Pega el link de tu perfil de Instragram">
        </div>    

      <div "form-group col">
            
            <img src="./images/twitter.png" alt="twitter-logo" width="30" height="30">
            <input type="text" name="twitter" class='form-control' id="twitter" style="height:50px;"  placeholder="Pega el link de tu perfil de Twitter">
        </div>
        </div>   
        </fieldset>

        <button type="submit" class="btn btn-primary">Create account</button>
        </section>'}
        {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
        {{/if}}

      
        </div>
    </form>`}`

     }
     
changeUser();
</script>
</div>